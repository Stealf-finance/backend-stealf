#[arcium_program]
pub mod anonyme_transfer {
    use super::*;

    pub fn init_encrypt_pda_comp_def(ctx: Context<InitEncryptPdaCompDef>) -> Result<()> {
        // Circuit hosted on Catbox for devnet/testnet
        init_comp_def(
            ctx.accounts,
            true,
            0,
            Some(CircuitSource::OffChain(OffChainCircuitSource {
                source: "https://files.catbox.moe/gcxw3c.arcis".to_string(),
                hash: [0; 32], // Hash verification not enforced for testnet
            })),
            None,
        )?;
        Ok(())
    }

    /// Chiffre un hash de l'adresse PDA via MPC
    /// 1. Hash l'adresse PDA on-chain avec keccak256
    /// 2. Split le hash en 2 parties u128
    /// 3. Envoie au circuit MPC pour chiffrement avec clé partagée
    pub fn encrypt_pda_hash(
        ctx: Context<EncryptPda>,
        computation_offset: u64,
        pda_address: [u8; 32],  // L'adresse PDA complète (32 bytes)
    ) -> Result<()> {
        ctx.accounts.sign_pda_account.bump = ctx.bumps.sign_pda_account;

        // Hash l'adresse PDA on-chain avec keccak256
        let hash = keccak::hash(&pda_address);
        let hash_bytes = hash.to_bytes();

        // Split le hash en 2 parties u128 (little-endian)
        let hash_part1 = u128::from_le_bytes(
            hash_bytes[0..16].try_into().unwrap()
        );
        let hash_part2 = u128::from_le_bytes(
            hash_bytes[16..32].try_into().unwrap()
        );

        // Envoie les hash parts en plaintext au circuit MPC
        // Le circuit les chiffrera avec la clé partagée
        let args = vec![
            Argument::PlaintextU128(hash_part1),
            Argument::PlaintextU128(hash_part2),
        ];

        queue_computation(
            ctx.accounts,
            computation_offset,
            args,
            None,
            vec![EncryptPdaHashCallback::callback_ix(&[])],
        )?;

        Ok(())
    }

    #[arcium_callback(encrypted_ix = "encrypt_pda_hash")]
    pub fn encrypt_pda_hash_callback(
        ctx: Context<EncryptPdaHashCallback>,
        output: ComputationOutputs<EncryptPdaHashOutput>,
    ) -> Result<()> {
        let tuple_output = match output {
            ComputationOutputs::Success(EncryptPdaHashOutput { field_0 }) => field_0,
            _ => return Err(ErrorCode::AbortedComputation.into()),
        };
        let hash_part1 = tuple_output.field_0;
        let hash_part2 = tuple_output.field_1;

        emit!(EncryptedPdaEvent {
            hash_part1: hash_part1.ciphertexts[0],
            hash_part2: hash_part2.ciphertexts[0],
            nonce: hash_part1.nonce.to_le_bytes(),
        });
        Ok(())
    }

    pub fn store_encrypted_hash(
        ctx: Context<StoreEncryptedHash>,
        hash_part1: [u8; 32],
        hash_part2: [u8; 32],
    ) -> Result<()> {
        let storage = &mut ctx.accounts.smart_account_storage;

        storage.owner = ctx.accounts.owner.key();
        storage.smart_account = ctx.accounts.smart_account.key();
        storage.hash_part1 = hash_part1;
        storage.hash_part2 = hash_part2;
        storage.bump = ctx.bumps.smart_account_storage;

        msg!("Encrypted PDA hash stored for smart account: {}", ctx.accounts.smart_account.key());

        Ok(())
    }

    pub fn init_decrypt_pda_comp_def(ctx: Context<InitDecryptPdaCompDef>) -> Result<()> {
        // Circuit hosted on Catbox for devnet/testnet
        init_comp_def(
            ctx.accounts,
            true,
            0,
            Some(CircuitSource::OffChain(OffChainCircuitSource {
                source: "https://files.catbox.moe/j0etjk.arcis".to_string(),
                hash: [0; 32], // Hash verification not enforced for testnet
            })),
            None,
        )?;
        Ok(())
    }

    /// Déchiffre un hash PDA stocké via MPC
    /// Les hash parts sont déjà chiffrés (reçus du storage)
    /// Le circuit MPC les déchiffre et retourne les valeurs plaintext
    pub fn decrypt_pda_hash(
        ctx: Context<DecryptPda>,
        computation_offset: u64,
        encrypted_hash_part1: [u8; 32],  // Ciphertext depuis storage
        encrypted_hash_part2: [u8; 32],  // Ciphertext depuis storage
        pub_key: [u8; 32],               // Clé publique du client pour déchiffrement
        nonce: u128,                     // Nonce pour le chiffrement original
    ) -> Result<()> {
        ctx.accounts.sign_pda_account.bump = ctx.bumps.sign_pda_account;

        // Passe les ciphertexts et les paramètres de déchiffrement au circuit MPC
        let args = vec![
            Argument::ArcisPubkey(pub_key),
            Argument::PlaintextU128(nonce),
            Argument::EncryptedU128(encrypted_hash_part1),
            Argument::EncryptedU128(encrypted_hash_part2),
        ];

        queue_computation(
            ctx.accounts,
            computation_offset,
            args,
            None,
            vec![DecryptPdaHashCallback::callback_ix(&[])],
        )?;

        Ok(())
    }

    #[arcium_callback(encrypted_ix = "decrypt_pda_hash")]
    pub fn decrypt_pda_hash_callback(
        ctx: Context<DecryptPdaHashCallback>,
        output: ComputationOutputs<DecryptPdaHashOutput>,
    ) -> Result<()> {
        let tuple_output = match output {
            ComputationOutputs::Success(DecryptPdaHashOutput { field_0 }) => field_0,
            _ => return Err(ErrorCode::AbortedComputation.into()),
        };
        let hash_part1 = tuple_output.field_0;
        let hash_part2 = tuple_output.field_1;

        emit!(DecryptedPdaEvent {
            hash_part1,
            hash_part2,
        });
        Ok(())
    }

}

#[queue_computation_accounts("encrypt_pda_hash", payer)]
